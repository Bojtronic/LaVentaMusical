@model LaVentaMusical.Models.Usuarios

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="card p-4 shadow w-100" style="max-width: 800px; margin-top: 100px">
            <h4 class="text-center mb-3">Registro de Usuarios</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                @Html.LabelFor(model => model.Identificacion, "Identificación", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Identificacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Identificacion, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Nombre_Usuario, "Nombre de Usuario", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Nombre_Usuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre_Usuario, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Apellidos, "Apellidos", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Genero, "Género", htmlAttributes: new { @class = "form-label" })
                @Html.DropDownListFor(model => model.Genero,
                    new SelectList(new[]
                    {
                        new { Value = "Masculino", Text = "Masculino" },
                        new { Value = "Femenino", Text = "Femenino" },
                        new { Value = "No especificado", Text = "No especificado" }
                    }, "Value", "Text"),
                    "Seleccione un género",
                    new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Email, "Correo Electrónico", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.TipoTarjeta, "Tipo de Tarjeta", htmlAttributes: new { @class = "form-label" })
                @Html.DropDownListFor(model => model.TipoTarjeta,
                    new SelectList(new[]
                    {
                        new { Value = "Visa", Text = "Visa" },
                        new { Value = "MasterCard", Text = "MasterCard" },
                        new { Value = "American Express", Text = "American Express" }
                    }, "Value", "Text"),
                    "Seleccione un tipo de tarjeta",
                    new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.TipoTarjeta, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.NumeroTarjeta, "Número de Tarjeta", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.NumeroTarjeta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumeroTarjeta, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Password, "Contraseña", htmlAttributes: new { @class = "form-label" })
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary w-100">Registrar</button>
            <div class="text-center mt-3">
                <small class="form-text">¿Ya tienes una cuenta? <a href="@Url.Action("Login", "Acceso")">Inicia sesión</a></small>
            </div>
        </div>
    }
</body>
</html>
