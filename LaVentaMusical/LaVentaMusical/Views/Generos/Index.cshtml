@model IEnumerable<LaVentaMusical.Models.Generos>

@{
    ViewBag.Title = "Index";
}

<div class="text-center mb-4">
    <a href="@Url.Action("Index", "HomeAdmin")" class="btn btn-link">Admin Home page</a>
</div>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id_Genero }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id_Genero }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id_Genero }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
